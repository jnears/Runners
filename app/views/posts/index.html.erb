<h1>Listing Posts</h1>
Filter categories: 
<%= link_to 'All', blog_path %> | 
<% @categories.each do |category| %>
            <%= link_to category.name, blog_path(:category => category.id) %> 
            <%= '|' unless category == @categories.last %>
          <% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post.permalink %></td>
       
       
      </tr>
    <% end %>
  </tbody>
</table>


