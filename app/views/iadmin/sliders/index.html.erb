<h1>Listing Sliders</h1>
<%= link_to 'New Slider', new_iadmin_slider_path %>
<table class="table table-striped">
<thead>
<tr>
<th>Title</th>
<th>Code to add slider</th>
<th>Slide</th>
<th></th>
</tr>
</thead>
<tbody>
<% @sliders.each do |slider| %>
<tr>
<td>
<%= link_to slider.title, edit_iadmin_slider_path(slider) %>
</td>
<td>
 <%= raw "<%= display_slider('#{slider.id}') %" %><%= raw ">" %>
</td>
<td>

<% slider.slides.each do |slide| %>
 <%= content_tag_for :li, slide do %>
 
<%= slide.description %>
<%= image_tag slide.image_slide.url(:small) %>
<% end %>
<% end %>

</td>
<td><%= link_to 'View', iadmin_slider_path(slider)%> <%= link_to 'Destroy', iadmin_slider_path(slider), method: :delete, data: { confirm: 'Are you sure?' } %></td>
</tr>
<% end %>
</tbody>
</table>
