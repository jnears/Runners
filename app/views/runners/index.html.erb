<h1>Listing runners</h1>
<div id="sidebar">A navigation here</div>
<div id ="main">
<table id="runners-table">
  <thead>
    <tr>
      <th>Fullname</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @runners.each do |runner| %>
      <tr>
        <td><%= runner.fullname %></td>
        <td><%= runner.gender %></td>
        <td><%= runner.age %></td>
        <td><%= link_to 'Show', runner %></td>
        <td><%= link_to 'Edit', edit_runner_path(runner) %></td>
        <td><%= link_to 'Destroy', runner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Runner', new_runner_path %>
</div>
